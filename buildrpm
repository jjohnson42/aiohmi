cd `dirname $0`
# If not PBR, use the setup.py.tmpl
python -c 'import pbr' || ./makesetup
VERSION=`python setup.py --version`
python setup.py sdist
cp dist/aiohmi-$VERSION.tar.gz ~/rpmbuild/SOURCES
grep -v python.-pbr python-aiohmi.spec > currentbuild.spec
rpmbuild -bs currentbuild.spec
rm $1/python-aiohmi-*rpm
cp ~/rpmbuild/SRPMS/python-aiohmi-$VERSION-1.src.rpm $1/
